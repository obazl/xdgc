    toolchains = TOOLCHAINS,
)

################################################################
makeheaders(
    name = "mkhdrs",
    hdrs_srcs = [
        "xdgc_test.c",
    ],
    additional_srcs = [
        "//src:xdgc.h",
    ],
)
