cc_binary(
    name  = "xdgc_test",
    linkstatic = 1,
    srcs  = ["xdgc_test.c", ":mkhdrs"],
    deps  = ["@liblogc//src:logc",
             "@uthash//src:uthash",
             "//src:xdgc"],
    copts = BASE_COPTS + [
        "-I$(GENDIR)/$(@)/test",
        "-I$(@liblogc)/src",
        "-I$(@uthash)/src"
